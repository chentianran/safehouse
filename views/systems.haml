%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en" }
   %head
      %title Systems of Equations
      %meta{ "http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
      %link{"rel" => "stylesheet", "href" => "/css/styles.css", "type" => "text/css" }
      %link{"rel" => "stylesheet", "href" => "/css/customStyles.css", "type" => "text/css", "media"=>"screen"}   
      %link{"rel"=>"stylesheet", "href"=>"http://fonts.googleapis.com/css?family=Playfair+Display", "type"=>"text/css"}
   %body
      = partial "bar"
      #page
         #content
            #content-bgtop
               #content-bgbtm
                  %div.post
                     %h1 Systems of Equations
                     %p
                        %ul
                           -@systemData.each do |row|
                              %li
                                 -if row['longname'] != nil
                                    %a.title{:href=>"/systems/" + row['name']}= "#{row['longname']}: "
                                 - else
                                    %a.title{:href=>"/systems/" + row['name']}= "#{row['name']}: "
                                 - if row['familyname'] != nil
                                    %p
                                       %a.title{:href=>"/families/"} Family: 
                                       %a{:href=>"/families/" + row['familyname']}= row['familyname'] 
                                 - if row['desc'] != nil
                                    %p 
                                       Description: 
                                       = row["desc"]
         #sidebar
            %ul
               %li
                  %h2 Properties
                  %ul
                     %li filler
                             
